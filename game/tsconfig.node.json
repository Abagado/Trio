{
  "extends": "@tsconfig/node18/tsconfig.json",
  "include": [
    "vite.config.*",
    "vitest.config.*",
    "cypress.config.*",
    "nightwatch.conf.*",
    "playwright.config.*",
    "src/**/*.ts",
    "src/**/*.vue",
    "src/vue-shims.d.ts"
  ],
  "compilerOptions": {
    "composite": true,
    "noEmit": true,
    "jsx": "preserve",
    "types": ["node"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
  }
}
